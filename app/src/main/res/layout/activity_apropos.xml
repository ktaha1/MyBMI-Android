<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky_cal"
    android:orientation="vertical"
    tools:context="com.imc.taha.myimc.Apropos">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:src="@drawable/back"
        android:onClick="retour" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyIMC Application"
        android:textColor="#000033"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textStyle="italic"
        android:typeface="serif"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:layout_gravity="center"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Développeurs :"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KAMIL Taha \n ZALLAFI Zainab"
        android:layout_marginLeft="130dp"
        android:textSize="16dp"
        android:textColor="#2a6434"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fillière d'ingénieur \n Génie Mathématiques et Informatique"
        android:textSize="13dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015/2016"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />

</LinearLayout>
